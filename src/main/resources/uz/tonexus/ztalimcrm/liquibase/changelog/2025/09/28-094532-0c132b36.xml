<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ZTalimCRM">
        <createTable tableName="ENROLLMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ENROLLMENT"/>
            </column>
            <column name="STUDENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="COURSE_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="ENROLLMENT_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="TOTAL_AMOUNT" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="DISCOUNT_AMOUNT" type="DECIMAL(10, 2)"/>
            <column name="FINAL_AMOUNT" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="APPOINTMENT_ID" type="UUID"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ZTalimCRM">
        <createIndex indexName="IDX_ENROLLMENT_STUDENT" tableName="ENROLLMENT">
            <column name="STUDENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="STUDENT_ID" baseTableName="ENROLLMENT"
                                 constraintName="FK_ENROLLMENT_ON_STUDENT" referencedColumnNames="ID"
                                 referencedTableName="STUDENT"/>
    </changeSet>
    <changeSet id="3" author="ZTalimCRM">
        <addForeignKeyConstraint baseColumnNames="APPOINTMENT_ID" baseTableName="ENROLLMENT"
                                 constraintName="FK_ENROLLMENT_ON_APPOINTMENT" referencedColumnNames="ID"
                                 referencedTableName="APPOINTMENT"/>
    </changeSet>
    <changeSet id="4" author="ZTalimCRM">
        <addForeignKeyConstraint baseColumnNames="COURSE_ID" baseTableName="ENROLLMENT"
                                 constraintName="FK_ENROLLMENT_ON_COURSE" referencedColumnNames="ID"
                                 referencedTableName="COURSE"/>
    </changeSet>
</databaseChangeLog>