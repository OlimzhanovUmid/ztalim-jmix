<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ZTalimCRM">
        <createTable tableName="COURSE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COURSE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="MIN_CAPACITY" type="INT"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ZTalimCRM">
        <createTable tableName="GROUP_">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_GROUP_"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="START_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="END_DATE" type="DATE"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="ZTalimCRM">
        <createTable tableName="GROUP_STUDENT_LINK">
            <column name="GROUP_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_GROUP_STUDENT_LINK"/>
            </column>
            <column name="STUDENT_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_GROUP_STUDENT_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="ZTalimCRM">
        <createTable tableName="LESSON_SCHEDULE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_LESSON_SCHEDULE"/>
            </column>
            <column name="START_TIME" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="END_TIME" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="GROUP_ID" type="UUID"/>
            <column name="TEACHER_ID" type="UUID"/>
            <column name="ROOM_ID" type="UUID"/>
            <column name="TOPIC_ID" type="UUID"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="ZTalimCRM">
        <createTable tableName="STUDY_ROOM">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_STUDY_ROOM"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CAPACITY" type="INT"/>
            <column name="IS_ACTIVE" type="BOOLEAN"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="ZTalimCRM">
        <createTable tableName="TOPIC">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TOPIC"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TOPIC_CONTENT" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COURSE_ID" type="UUID"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="ZTalimCRM">
        <createIndex indexName="IDX_SCHEDULE_GROUP" tableName="LESSON_SCHEDULE">
            <column name="GROUP_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="GROUP_ID" baseTableName="LESSON_SCHEDULE"
                                 constraintName="FK_LESSON_SCHEDULE_ON_GROUP" referencedColumnNames="ID"
                                 referencedTableName="GROUP_"/>
    </changeSet>
    <changeSet id="8" author="ZTalimCRM">
        <createIndex indexName="IDX_SCHEDULE_ROOM" tableName="LESSON_SCHEDULE">
            <column name="ROOM_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ROOM_ID" baseTableName="LESSON_SCHEDULE"
                                 constraintName="FK_LESSON_SCHEDULE_ON_ROOM" referencedColumnNames="ID"
                                 referencedTableName="STUDY_ROOM"/>
    </changeSet>
    <changeSet id="9" author="ZTalimCRM">
        <createIndex indexName="IDX_SCHEDULE_TEACHER" tableName="LESSON_SCHEDULE">
            <column name="TEACHER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TEACHER_ID" baseTableName="LESSON_SCHEDULE"
                                 constraintName="FK_LESSON_SCHEDULE_ON_TEACHER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="10" author="ZTalimCRM">
        <createIndex indexName="IDX_SCHEDULE_TOPIC" tableName="LESSON_SCHEDULE">
            <column name="TOPIC_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TOPIC_ID" baseTableName="LESSON_SCHEDULE"
                                 constraintName="FK_LESSON_SCHEDULE_ON_TOPIC" referencedColumnNames="ID"
                                 referencedTableName="TOPIC"/>
    </changeSet>
    <changeSet id="11" author="ZTalimCRM">
        <createIndex indexName="IDX_TOPIC_COURSE" tableName="TOPIC">
            <column name="COURSE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="COURSE_ID" baseTableName="TOPIC" constraintName="FK_TOPIC_ON_COURSE"
                                 referencedColumnNames="ID" referencedTableName="COURSE"/>
    </changeSet>
    <changeSet id="12" author="ZTalimCRM">
        <addForeignKeyConstraint baseColumnNames="GROUP_ID" baseTableName="GROUP_STUDENT_LINK"
                                 constraintName="FK_GROSTU_ON_GROUP" referencedColumnNames="ID"
                                 referencedTableName="GROUP_"/>
    </changeSet>
    <changeSet id="13" author="ZTalimCRM">
        <addForeignKeyConstraint baseColumnNames="STUDENT_ID" baseTableName="GROUP_STUDENT_LINK"
                                 constraintName="FK_GROSTU_ON_STUDENT" referencedColumnNames="ID"
                                 referencedTableName="STUDENT"/>
    </changeSet>
</databaseChangeLog>