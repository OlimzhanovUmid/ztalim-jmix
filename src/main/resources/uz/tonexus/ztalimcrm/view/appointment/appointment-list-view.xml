<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://appointmentListView.title"
      focusComponent="appointmentsDataGrid">
    <data>
        <collection id="appointmentsDc"
                    class="uz.tonexus.ztalimcrm.entity.Appointment">
            <fetchPlan extends="_base">
                <property name="teacher" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="appointmentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Appointment e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="appointmentsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="appointmentsDataGrid.createAction"/>
            <button id="editButton" action="appointmentsDataGrid.editAction"/>
            <button id="removeButton" action="appointmentsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="appointmentsDl"/>
        </hbox>
        <dataGrid id="appointmentsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="appointmentsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="phoneNumber"/>
                <column property="gender"/>
                <column property="dateOfBirth"/>
                <column property="parentInfo"/>
                <column property="preferredDays"/>
                <column property="preferredTime"/>
                <column property="teacher"/>
                <column property="comment"/>
                <editorActionsColumn>
                    <editButton text="Edit" icon="PENCIL"/>
                    <saveButton icon="CHECK" themeNames="success"/>
                    <cancelButton icon="CLOSE" themeNames="error"/>
                </editorActionsColumn>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
