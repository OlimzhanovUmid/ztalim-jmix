<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://appointmentDetailView.title"
      focusComponent="form">
    <data>
        <instance id="appointmentDc"
                  class="uz.tonexus.ztalimcrm.entity.Appointment">
            <fetchPlan extends="_base">
                <property name="teacher" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="appointmentDl"/>
        </instance>
        <collection id="usersDc" class="uz.tonexus.ztalimcrm.entity.User">
            <loader id="usersDl" readOnly="true">
                <query>
                    <![CDATA[select e from User e where e.role = 'Teacher'  ]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="appointmentDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="firstNameField" property="firstName"/>
            <textField id="lastNameField" property="lastName"/>
            <textField id="phoneNumberField" property="phoneNumber"/>
            <select id="genderField" property="gender"/>
            <datePicker id="dateOfBirthField" property="dateOfBirth"/>
            <textField id="parentInfoField" property="parentInfo"/>
            <select id="preferredDaysField" property="preferredDays"/>
            <select id="preferredTimeField" property="preferredTime"/>
            <entityComboBox
                    id="teacherField"
                    property="teacher"
                    dataContainer="appointmentDc"
                    itemsContainer="usersDc"
            />
            <textField id="commentField" property="comment"/>
            <select id="appointmentStatusField" property="appointmentStatus"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
