<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://enrollmentDetailView.title"
      focusComponent="form">
    <data>
        <instance id="enrollmentDc"
                  class="uz.tonexus.ztalimcrm.entity.Enrollment">
            <fetchPlan extends="_base">
                <property name="student" fetchPlan="_instance_name"/>
                <property name="course" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="enrollmentDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="enrollmentDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityPicker id="studentField" property="student">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="courseField" property="course">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <datePicker id="enrollmentDateField" property="enrollmentDate"/>
            <textField id="totalAmountField" property="totalAmount"/>
            <textField id="discountAmountField" property="discountAmount"/>
            <textField id="finalAmountField" property="finalAmount"/>
            <select id="statusField" property="status"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
